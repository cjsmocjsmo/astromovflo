---
import Action2 from "./action2.astro";
import Layout from "../../../layouts/LayoutPage.astro";

const response = await fetch("http://192.168.0.94:8888/intAction");
const data = await response.json();
---

<Action2 />

<Layout title="Action">
    <main>
        <div class="grid grid-cols-5 gap-2 flex items-center">
            {
                data.map((d) => (
                    <div class="m-4">
                        <img
                            id={d.movname}
                            src={d.httpthumbpath}
                            class="max-w-full h-auto rounded-lg"
                            alt={d.movname}
                        />
                    </div>
                ))
            }
        </div>
    </main>
</Layout>
